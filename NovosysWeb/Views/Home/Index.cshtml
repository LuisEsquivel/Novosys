@{
    ViewBag.Title = "Home Page";
}


<section id="portada">
    <div class="container">

        <div class="row">
            <div class="col-md-6" style="margin-top: 120px;">
                <h3 style="color: #070751; font-weight: bold;">Soluciones RFID</h3>
                <img src="~/img/diagramagris-1200x680.png" class="w-100" alt="Alternate Text" />
            </div>

            <div class="col-md-6" style="margin-top: 120px;">
                <form class="p-3" style="background: #edf6f5;border-radius: 10px;">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nombre (requerido)</label>
                        <input type="text" class="form-control" id="txtNombre" aria-describedby="emailHelp" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">E-mail (requerido)</label>
                        <input type="email" class="form-control" id="txtEmail">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Telefono (requerido)</label>
                        <input type="tel" class="form-control" id="txtTelefono">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Mensaje</label>
                        <textarea class="form-control" id="txtMensaje" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gray">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

